{
  "rules": {
    "profiles": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      }
    },
    "rooms": {
      ".read": "auth !== null",
      ".indexOn": "lastMessage/author/uid",
      "$room_id": {
        ".read": "auth !== null",
        ".write": "auth !== null",
        "lastMessage": {
          ".write": "auth !== null"
        }
      }
    },
    "messages": {
      ".read": "auth !== null",
      ".write": "auth !== null",
      ".indexOn": ["roomId", "author/uid"],
      "$message_id": {
        ".read": "auth !== null",
        ".write": "auth !== null"
      }
    },
    "status": {
      ".indexOn": ["roomId", "author/uid"],
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      }
    },
    ".read": false,
    ".write": false
  }
}
